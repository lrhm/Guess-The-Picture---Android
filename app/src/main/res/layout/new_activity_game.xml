<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="2"/>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/level_view">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:clipToPadding="true"
            android:id="@+id/box">

            <ImageView
                android:id="@+id/image_game"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/black_widow"
                android:background="#000"
                android:visibility="gone"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cheat_remove_some_letters"
                android:visibility="gone"
                android:layout_gravity="top"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cheat_reveal_a_letter"
                android:visibility="gone"
                android:layout_gravity="center_vertical"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cheat_skip_level"
                android:visibility="gone"
                android:layout_gravity="bottom"/>

        </FrameLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:id="@+id/frame"
            android:layout_gravity="center"
            android:contentDescription="@string/nothing"/>

    </FrameLayout>

    <View
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="3"/>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_solution1"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal" />

    <View
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="3"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_solution2"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:visibility="gone"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_solution3"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:overScrollMode="never"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:visibility="gone"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_keyboard"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="20dp"
        android:overScrollMode="never"
        android:scrollbars="vertical" />

    <View
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="4"/>

</LinearLayout>
