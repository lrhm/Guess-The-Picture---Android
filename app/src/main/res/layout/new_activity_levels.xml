<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/levels_back_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header"
        android:contentDescription="@string/nothing" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/levels_back_top"
        android:layout_above="@+id/levels_back_bottom" />
   <!--todo: fekr konam layout_heightagar wrap content beshe khshgeltar beshe bayad test she-->

    <ImageView
        android:id="@id/levels_back_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/viewpagertab"
        android:contentDescription="@string/nothing" />

    <com.ogaclejapan.smarttablayout.SmartTabLayout
        android:id="@id/viewpagertab"
        android:layout_width="wrap_content"
        android:layout_height="8dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        app:stl_customTabTextLayoutId="@layout/custom_tab_circle"
        app:stl_dividerColor="#00000000"
        app:stl_dividerThickness="0dp"
        app:stl_indicatorColor="#40C4FF"
        app:stl_indicatorCornerRadius="4dp"
        app:stl_indicatorInterpolation="linear"
        app:stl_indicatorThickness="8dp"
        app:stl_underlineColor="#00000000"
        app:stl_underlineThickness="0dp"
        android:layout_alignParentBottom="true" />
</RelativeLayout>
