<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <fragment
        android:id="@+id/header"
        android:name="ir.treeco.aftabe.New.View.Fragment.HeaderFragmentNew"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout="@layout/new_fragment_header" />

    <ImageView
        android:id="@+id/levels_back_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header"
        android:contentDescription="@string/nothing" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_below="@id/levels_back_top" />

    <ImageView
        android:id="@+id/levels_back_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewpager"
        android:contentDescription="@string/nothing" />

    <com.ogaclejapan.smarttablayout.SmartTabLayout
        android:id="@+id/viewpagertab"
        android:layout_width="wrap_content"
        android:layout_height="8dp"
        android:layout_below="@+id/levels_back_bottom"
        android:layout_centerHorizontal="true"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="100dp"
        app:stl_customTabTextLayoutId="@layout/custom_tab_circle"
        app:stl_dividerColor="#00000000"
        app:stl_dividerThickness="0dp"
        app:stl_indicatorColor="#40C4FF"
        app:stl_indicatorCornerRadius="4dp"
        app:stl_indicatorInterpolation="linear"
        app:stl_indicatorThickness="8dp"
        app:stl_underlineColor="#00000000"
        app:stl_underlineThickness="0dp" />
</RelativeLayout>
