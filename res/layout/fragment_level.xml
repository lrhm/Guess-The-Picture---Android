<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <FrameLayout android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:id="@+id/imagePlace">
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/level_image_view"
                android:scaleType="centerCrop"
                android:cropToPadding="true"
                android:adjustViewBounds="true"/>
        <!--ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:id="@+id/levelFrame"/-->
    </FrameLayout>
    <View android:layout_height="0dp"
          android:layout_width="fill_parent" android:layout_weight="3"/>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:id="@+id/solution_rows"/>
    <View android:layout_height="0dp"
          android:layout_width="match_parent" android:layout_weight="3"/>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:orientation="vertical" android:id="@+id/alphabet_rows"/>
    <View android:layout_height="0dp"
          android:layout_width="match_parent" android:layout_weight="4"/>

</LinearLayout>